cabal-version:      2.4
name:               Scrapbook
version:            0.3.2
description:
  Please see the README on GitLab at
  <https://github.com/frankhjung/haskell-scrapbook#readme>

synopsis:           code examples
homepage:           https://github.com/frankhjung/haskell-scrapbook#readme
bug-reports:        https://github.com/frankhjung/haskell-scrapbook/issues
author:             Frank H Jung
maintainer:         frankhjung@linux.com
copyright:          Copyright Â© 2020-2023 Frank H Jung
license:            BSD-3-Clause
license-file:       LICENSE
category:           education
extra-source-files: README.md

source-repository head
  type:     git
  location: https://github.com/frankhjung/haskell-scrapbook

library
  hs-source-dirs:   src
  default-language: Haskell2010
  ghc-options:      -Wall
  build-depends:
    , aeson
    , base          ^>=4.17
    , bytestring
    , directory
    , filepath
    , free
    , hspec
    , mtl
    , QuickCheck
    , random
    , text
    , time
    , transformers

  exposed-modules:
    ApplyToTuple
    BinarySearch
    Caesar
    CFold
    Colours
    CountEntries
    Cps
    Expr
    Lower
    Mod35
    MonTrans
    MyFilter
    MyFreeMonad
    MyJson
    MyPenultimate
    MyReverse
    MyState
    MyTake
    MyType
    Permutation
    PolyDivisors
    Qsort
    Random
    RecursionSchemes
    RepMax
    SplitList
    Stack
    SubSeqs
    Trim
    Weekday
    Yahtzee
    ZipFold

executable counter
  hs-source-dirs:   app
  main-is:          Counter.hs
  default-language: Haskell2010
  build-depends:    base
  ghc-options:
    -Wno-unrecognised-pragmas -Wno-unused-top-binds -threaded -rtsopts
    -with-rtsopts=-N

executable fpcomplete
  hs-source-dirs:   app
  main-is:          FPComplete.hs
  default-language: Haskell2010
  build-depends:    base
  ghc-options:
    -Wno-unrecognised-pragmas -Wno-unused-top-binds -threaded -rtsopts
    -with-rtsopts=-N

executable json
  hs-source-dirs:   app
  main-is:          Json.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    , aeson
    , base
    , bytestring
    , containers
    , text

executable numberlines
  hs-source-dirs:   app
  main-is:          NumberLines.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    , base
    , fmt

executable polydivs
  hs-source-dirs:   app src
  main-is:          PolyDivs.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  other-modules:    PolyDivisors
  build-depends:
    , base
    , Scrapbook

executable quine
  hs-source-dirs:   app
  main-is:          Quine.hs
  default-language: Haskell2010
  ghc-options:
  build-depends:    base

executable readfile
  hs-source-dirs:   app
  main-is:          ReadFile.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:    base

executable skips
  hs-source-dirs:   app
  main-is:          Skips.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:    base

executable stategame
  hs-source-dirs:   app
  main-is:          StateGame.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    , base
    , mtl

executable threads
  hs-source-dirs:   app
  main-is:          Threads.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    , base
    , stm

executable vocab
  hs-source-dirs:   app
  main-is:          Vocab.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    , base
    , text

executable while
  hs-source-dirs:   app
  main-is:          While.hs
  default-language: Haskell2010
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:    base

executable wordcount
  hs-source-dirs:   app
  main-is:          WordCount.hs
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010
  build-depends:
    , base
    , fmt

executable wordcountarrow
  hs-source-dirs:   app
  main-is:          WordCountArrow.hs
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010
  build-depends:
    , base
    , fmt

test-suite test
  hs-source-dirs:     test src
  main-is:            TestsSpec.hs
  default-language:   Haskell2010
  ghc-options:        -Wall -Wno-missing-home-modules
  type:               exitcode-stdio-1.0
  build-tool-depends: hspec-discover:hspec-discover
  build-depends:
    , aeson
    , base
    , bytestring
    , directory
    , filepath
    , free
    , hspec
    , hspec-discover
    , mtl
    , QuickCheck
    , random
    , Scrapbook
    , text
    , time
    , transformers

  other-modules:
    ApplyToTuple
    ApplyToTupleSpec
    BinarySearch
    BinarySearchSpec
    Caesar
    CaesarSpec
    CFold
    CFoldSpec
    Colours
    ColoursSpec
    CountEntries
    CountEntriesSpec
    Cps
    CpsSpec
    Expr
    ExprSpec
    Lower
    LowerSpec
    Mod35
    Mod35Spec
    MonTrans
    MonTransSpec
    MyFilter
    MyFilterSpec
    MyFreeMonad
    MyFreeMonadSpec
    MyJson
    MyJsonSpec
    MyPenultimate
    MyPenultimateSpec
    MyReverse
    MyReverseSpec
    MyState
    MyTake
    MyTakeSpec
    MyType
    MyTypeSpec
    Permutation
    PermutationSpec
    PolyDivisors
    PolyDivisorsSpec
    Qsort
    QsortSpec
    Random
    RandomSpec
    RecursionSchemes
    RecursionSchemesSpec
    RepMax
    RepMaxSpec
    SplitList
    SplitListSpec
    Stack
    StackSpec
    SubSeqs
    SubSeqsSpec
    Trim
    TrimSpec
    Weekday
    WeekdaySpec
    Yahtzee
    YahtzeeSpec
    ZipFold
    ZipFoldSpec

benchmark monTransBench
  hs-source-dirs:   bench src
  main-is:          MonTransBench.hs
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  other-modules:    MonTrans
