  hs-source-dirs:   bench
                  , src
  main-is:          MonTransBench.hs
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  build-depends:    base
                  , criterion >= 1.5.7.0 && < 1.5.14
  other-modules:    MonTrans

